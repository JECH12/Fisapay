<html ng-app="employeeModule" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Test</title>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/App.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta3/js/bootstrap.min.js" integrity="sha512-mp3VeMpuFKbgxm/XMUU4QQUcJX4AZfV5esgX72JQr7H7zWusV6lLP1S78wZnX2z9dwvywil1VHkHZAqfGOW7Nw==" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta3/css/bootstrap.min.css" integrity="sha512-N415hCJJdJx+1UBfULt+i+ihvOn42V/kOjOpp1UTh4CZ70Hx5bDlKryWaqEKfY/8EYOu/C2MuyaluJryK1Lb5Q==" crossorigin="anonymous" />
</head>
<body>
    <div ng-controller="editEmployeeController" data-ng-init="loadRecord('@Request.QueryString["employeeId"].ToString()')">
        <div class="container">
            <div class="row">
                <form name="editEmployee" id="editEmployee">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <div class="form-group" ng-class="{'has-error':editEmployee.DNI.$invalid && editEmployee.DNI.$dirty}">
                            <label>DNI</label>
                            <input type="text" class="form-control" ng-model="register.DNI" name="DNI" id="DNI" required />
                            <span ng-if="editEmployee.DNI.$invalid" class="help-block">DNI is Required</span>
                        </div>
                        <div class="form-group" ng-class="{'has-error':editEmployee.Name.$invalid}">
                            <label>Name</label>
                            <input type="text" class="form-control" ng-model="register.Name" name="Name" id="Name" required />
                            <span ng-if="editEmployee.Name.$invalid && editEmployee.Name.$dirty" class="help-block">Description is Required</span>
                        </div>
                        <div class="form-group" ng-class="{'has-error':insertEmployee.Sex.$invalid && insertEmployee.Sex.$dirty}">
                            <label>Sex</label>
                            <select ng-model="register.Sex" name="Sex" id="Sex">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span ng-if="insertEmployee.Sex.$invalid" class="help-block">Sex is Required</span>
                        </div>
                        <div class="form-group" ng-class="{'has-error':editEmployee.date.$invalid}">
                            <label>Birthday</label>
                            <input type="date" class="form-control" ng-bind="date | date:'dd/MM/yyyy'" ng-model="date" name="date" id="date" required />
                            <span ng-if="editCourse.date.$invalid && editCourse.date.$dirty" class="help-block">Birthday is Required</span>
                        </div>
                        <div class="form-group" ng-class="{'has-error':insertCourse.Salary.$invalid && insertCourse.Salary.$dirty}">
                            <label>Salary</label>
                            <input type="number" class="form-control" ng-model="register.Salary" name="Salary" id="Salary" required />
                            <span ng-show="insertCourse.Salary.$invalid " class="help-block">Salary is Required</span>
                        </div>   
                        <div class="form-group" ng-class="{'has-error':insertEmployee.Covid_Vaccine.$invalid}">
                            <label>Covid Vaccine</label>
                            <select ng-model="register.Covid_Vaccine" name="Covid_Vaccine" id="Covid_Vaccine">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span ng-if="insertEmployee.Covid_Vaccine.$invalid" class="help-block">Covid_Vaccine is Required</span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" id="id" name="id" ng-model="register.Id"/>
                            <input type="button" class="btn btn-primary" ng-click="saveData()" value="Save" />
                            <a class="btn btn-default" href="/Home/Consult">Cancel</a>
                        </div>
                    </div>
                    <div class="col-sm-2"></div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>



